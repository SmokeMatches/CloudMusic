/* 五个小图标样式 */
.navContainer{
  display: flex;
  
}
.navItem{
  display: flex;
  flex-direction: column;
  width: 20%;
  align-items: center;
}

.navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  line-height: 100rpx;
  background: rgb(240, 19, 19);
  margin: 20rpx 0;
  font-size: 50rpx;
}
.navItem text{
  font-size: 26rpx;
}

/* 推荐歌曲 */
.recommendContainer{
  padding:20rpx;
}

/* 滚轴内容区域 */
.recommendScroll{
  margin-top: 20rpx;
  display: flex;
  height: 300rpx;
}
.scrollItem{
  width: 200rpx;
  margin-right: 20rpx;

}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text{
  font-size: 26rpx;
  /* 单行文本溢出隐藏 */
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
